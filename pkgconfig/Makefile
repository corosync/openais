# Include configuration
#
srcdir ?= $(CURDIR)/../
subdir ?= pkgconfig

include $(srcdir)/Makefile.inc

LIBS = SaAmf SaCkpt SaClm SaEvt SaLck SaMsg

all:
	for i in $(LIBS); do \
		cat ${srcdir}/pkgconfig/libtemplate.pc.in | sed \
			-e 's#@PREFIX@#$(PREFIX)#g' \
			-e 's#@LIBDIR@#$(LIBDIR)#g' \
			-e 's#@LIB@#'$${i}'#g' \
		> lib$${i}.pc; \
	done;

clean:
	rm -f *.pc
